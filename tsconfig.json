{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "outDir": "./lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "DOM",
      "ES2017"
    ],
    "types": ["svelte"]
  },
  "include": [
    "**/*.ts",
    "**/*.svelte"
  ]
}
